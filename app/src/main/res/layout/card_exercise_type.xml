<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:layout_marginHorizontal="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_larger"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Media -->
        <ImageView
            android:id="@+id/exercise_image"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_description_media"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/exercise_image"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_small"
            android:orientation="vertical">

            <!-- Title and Chip Aligned Properly -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/exercise_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip"
                    android:visibility="gone"
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_small" />
            </RelativeLayout>

            <!-- Description Below Exercise Name -->
            <TextView
                android:id="@+id/exercise_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorPrimary"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Secondary and Supporting Text Below -->
            <TextView
                android:id="@+id/exercise_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary" />
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
